{
  "name": "saucedemo-automation",
  "version": "1.0.0",
  "description": "Playwright + TypeScript + Cucumber automation for SauceDemo checkout.",
  "scripts": {
    "clean": "rm -rf node_modules .cache",
    "install:all": "npm install",
    "test": "cucumber-js --require-module ts-node/register --require src/support/**/*.ts --require src/steps/**/*.ts --format json:reports/cucumber_report.json features",
    "report:html": "npx multiple-cucumber-html-reporter --reportName 'SauceDemo Checkout' --jsonFile reports/cucumber_report.json --output reports/html-report",
    "report:allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report || true",
    "report:allure:open": "allure open reports/allure-report || true",
    "run:full": "npm run test && npm run report:html && npm run report:allure:generate"
  },
  "dependencies": {
    "playwright": "^1.35.0",
    "seedrandom": "^3.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@cucumber/messages": "^28.1.0",
    "@types/seedrandom": "^3.0.8",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.3.3",
    "expect": "^30.0.5",
    "multiple-cucumber-html-reporter": "^3.7.0"
  }
}
